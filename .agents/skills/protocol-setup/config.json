    "keywords": [
      "protocol",
      "protocols",
      "docs/protocols",
      "create protocol",
      "add protocol",
      "edit protocol",
      "modify protocol",
      "protocol setup",
      "protocol template",
      "process document",
      "PROTOCOL.md",
      "protocol type",
      "protocol skill"
