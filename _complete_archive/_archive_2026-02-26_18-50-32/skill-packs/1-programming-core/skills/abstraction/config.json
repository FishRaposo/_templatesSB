{
  "agent_support": {
    "claude": {
      "min_version": "3.0"
    },
    "roo": {
      "min_version": "1.0"
    },
    "cascade": {
      "min_version": "1.0"
    },
    "generic": {
      "requirements": [
        "file_access",
        "code_execution"
      ]
    }
  },
  "triggers": {
    "keywords": [
      "abstract",
      "abstraction",
      "interface",
      "encapsulate",
      "encapsulation",
      "hide implementation",
      "simplify",
      "wrapper",
      "dependency inversion"
    ],
    "patterns": [
      "create.*abstraction",
      "design.*interface",
      "hide.*implementation",
      "abstract.*away",
      "simplify.*complex",
      "wrap.*behind.*interface"
    ]
  },
  "requirements": {
    "tools": [],
    "permissions": [
      "file_read",
      "file_write",
      "execute"
    ],
    "memory": "512MB",
    "notes": "Language-agnostic skill. No specific runtime required."
  },
  "examples": {
    "simple": [
      "Create an abstraction",
      "Design interface",
      "Hide implementation"
    ],
    "complex": [
      "Design a payment gateway abstraction that supports multiple providers",
      "Create an abstraction layer to swap between SQL and NoSQL databases",
      "Refactor this tightly-coupled module into an abstract interface with dependency injection"
    ]
  }
}