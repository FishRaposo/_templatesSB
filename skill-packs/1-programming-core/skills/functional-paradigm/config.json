{
  "agent_support": {
    "claude": {
      "min_version": "3.0"
    },
    "roo": {
      "min_version": "1.0"
    },
    "cascade": {
      "min_version": "1.0"
    },
    "generic": {
      "requirements": [
        "file_access",
        "code_execution"
      ]
    }
  },
  "triggers": {
    "keywords": [
      "functional",
      "pure function",
      "immutable",
      "composition",
      "higher-order",
      "map reduce",
      "side effect",
      "monad",
      "currying"
    ],
    "patterns": [
      "write.*functional",
      "make.*pure.*function",
      "compose.*functions",
      "eliminate.*side.*effects",
      "refactor.*to.*functional",
      "immutable.*data"
    ]
  },
  "requirements": {
    "tools": [],
    "permissions": [
      "file_read",
      "file_write",
      "execute"
    ],
    "memory": "512MB",
    "notes": "Language-agnostic skill. No specific runtime required."
  },
  "examples": {
    "simple": [
      "Write functional code",
      "Make this pure",
      "Compose functions"
    ],
    "complex": [
      "Refactor this imperative data pipeline into a functional composition with map, filter, and reduce",
      "Implement a functional error handling chain using Result/Either monads",
      "Design an immutable state management system using pure reducers and selectors"
    ]
  }
}