{
  "agent_support": {
    "claude": {
      "min_version": "3.0"
    },
    "roo": {
      "min_version": "1.0"
    },
    "cascade": {
      "min_version": "1.0"
    },
    "generic": {
      "requirements": [
        "file_access",
        "code_execution"
      ]
    }
  },
  "triggers": {
    "keywords": [
      "module",
      "modular",
      "component",
      "dependency",
      "coupling",
      "cohesion",
      "separation of concerns",
      "package",
      "namespace"
    ],
    "patterns": [
      "organize.*code",
      "split.*into.*modules",
      "reduce.*coupling",
      "separate.*concerns",
      "design.*module",
      "manage.*dependencies"
    ]
  },
  "requirements": {
    "tools": [],
    "permissions": [
      "file_read",
      "file_write",
      "execute"
    ],
    "memory": "512MB",
    "notes": "Language-agnostic skill. No specific runtime required."
  },
  "examples": {
    "simple": [
      "Modularize this code",
      "Create components",
      "Organize project"
    ],
    "complex": [
      "Decompose this monolithic service into well-defined modules with clear boundaries",
      "Design a plugin architecture that allows third-party extensions without modifying core code",
      "Refactor circular dependencies between these three modules into a clean dependency graph"
    ]
  }
}