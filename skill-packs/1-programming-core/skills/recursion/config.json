{
  "agent_support": {
    "claude": {
      "min_version": "3.0"
    },
    "roo": {
      "min_version": "1.0"
    },
    "cascade": {
      "min_version": "1.0"
    },
    "generic": {
      "requirements": [
        "file_access",
        "code_execution"
      ]
    }
  },
  "triggers": {
    "keywords": [
      "recursive",
      "recursion",
      "base case",
      "divide and conquer",
      "tree traversal",
      "backtracking",
      "memoization",
      "tail recursion",
      "stack overflow"
    ],
    "patterns": [
      "implement.*recursion",
      "convert.*to.*recursive",
      "recursive.*solution",
      "traverse.*tree",
      "backtrack.*solution",
      "memoize.*recursive"
    ]
  },
  "requirements": {
    "tools": [],
    "permissions": [
      "file_read",
      "file_write",
      "execute"
    ],
    "memory": "512MB",
    "notes": "Language-agnostic skill. No specific runtime required."
  },
  "examples": {
    "simple": [
      "Implement recursively",
      "Convert to recursion",
      "Design recursive solution"
    ],
    "complex": [
      "Implement a recursive descent parser for a simple expression language with operator precedence",
      "Convert this recursive tree traversal to use tail recursion and avoid stack overflow on deep trees",
      "Design a backtracking algorithm to solve a constraint satisfaction problem with pruning"
    ]
  }
}