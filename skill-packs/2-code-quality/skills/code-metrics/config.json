{
  "agent_support": {
    "claude": {"min_version": "3.0"},
    "roo": {"min_version": "1.0"},
    "cascade": {"min_version": "1.0"},
    "generic": {"requirements": ["file_access", "code_execution"]}
  },
  "triggers": {
    "keywords": [
      "code metrics",
      "cyclomatic complexity",
      "test coverage",
      "code duplication",
      "coupling",
      "churn",
      "hotspot",
      "maintainability index",
      "code health"
    ],
    "patterns": [
      "measure.*quality",
      "code.*complexity",
      "test.*coverage",
      "duplication.*percentage",
      "quality.*metrics",
      "track.*quality"
    ]
  },
  "requirements": {
    "tools": [],
    "permissions": ["file_read", "file_write", "execute"],
    "notes": "Language-agnostic skill. Works with any programming language."
  },
  "examples": {
    "simple": [
      "Measure the complexity of this module",
      "What's our test coverage?",
      "Find the most complex functions"
    ],
    "complex": [
      "Set up a quality metrics dashboard for this project",
      "Analyze hotspots combining churn and complexity",
      "Track quality metrics over time in CI"
    ]
  }
}
