{
  "agent_support": {
    "claude": {"min_version": "3.0"},
    "roo": {"min_version": "1.0"},
    "cascade": {"min_version": "1.0"},
    "generic": {"requirements": ["file_access", "code_execution"]}
  },
  "triggers": {
    "keywords": [
      "coding standards",
      "linter",
      "formatter",
      "eslint",
      "prettier",
      "code style",
      "style guide",
      "commit convention",
      "editorconfig",
      "code consistency"
    ],
    "patterns": [
      "set up.*linter",
      "configure.*eslint",
      "enforce.*standards",
      "coding.*style",
      "formatting.*rules",
      "commit.*convention"
    ]
  },
  "requirements": {
    "tools": [],
    "permissions": ["file_read", "file_write"],
    "notes": "Language-agnostic skill. Works with any programming language."
  },
  "examples": {
    "simple": [
      "Set up ESLint for this TypeScript project",
      "Configure Prettier for consistent formatting",
      "Add a pre-commit hook for linting"
    ],
    "complex": [
      "Establish coding standards for our team from scratch",
      "Set up CI quality gates that block non-compliant PRs",
      "Migrate from TSLint to ESLint flat config"
    ]
  }
}
